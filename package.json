{
    "name": "ptc2022-slides",
    "version": "1.0.0",
    "description": "Qualité en start-up pourquoi faire ?",
    "author": "Grégory Heitz",
    "scripts": {
        "start": "marp -ps --html --pdf --input-dir ./slides --output ./public",
        "html": "marp slides/__deck.md --output public/index.html",
        "pdf": "marp slides/__deck.md --output public/ptc_2022.pdf --pdf --html",
        "build": "npm run html && npm run pdf"
    },
    "dependencies": {
        "@marp-team/marp-cli": "^2.2.0",
        "@marp-team/marp-core": "^3.3.3",
        "markdown-it-include": "^2.0.0",
        "markdown-it-mark": "^3.0.1"
    }
}
